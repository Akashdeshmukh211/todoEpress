<%- include('header.ejs') %>
<link rel="stylesheet" href="/stylesheets/login.css">

  <body>
    <div class="container">
      <div class="row">
        <div class="col-md-6 offset-md-3">
          <div class="card my-5">
            <% if (title == 'loginPage') { %>
              <form class="card-body cardbody-color p-lg-5" id="login">
                <h4>User Login</h4>
                <div class="text-center">
                  <img src="https://cdn.pixabay.com/photo/2016/03/31/19/56/avatar-1295397__340.png" class="img-fluid profile-image-pic img-thumbnail rounded-circle my-3"
                    width="200px" alt="profile">
                </div>
    
                <div class="mb-3">
                  <input type="text" class="form-control" id="Username" name="Username" 
                    placeholder="User Name">
                </div>
                <div class="mb-3">
                  <input type="password" class="form-control" id="password" name="password" placeholder="Password">
                </div>
                <div class="text-center"><button type="submit" class="btn btn-color px-5 mb-5 w-100" id="loginbtn">Login</button></div>
                <div class="form-text text-center mb-5 text-dark">Not
                  Registered? <a href="/creataccunt" class="text-dark fw-bold"> Create an
                    Account</a>
                </div>
              </form>
              <% } else { %>
                <form class="card-body cardbody-color p-lg-5"  id="register">
                  <h4>User Registration</h4>
                  <div class="text-center">
                    <img src="https://cdn.pixabay.com/photo/2016/03/31/19/56/avatar-1295397__340.png" class="img-fluid profile-image-pic img-thumbnail rounded-circle my-3"
                      width="200px" alt="profile">
                  </div>
                  <div class="mb-3">
                    <input type="text" class="form-control" id="fullname" name="fullname"
                      placeholder="Full Name">
                  </div>
                  <div class="mb-3">
                    <input type="text" class="form-control" id="email" name="email"
                      placeholder="Email">
                  </div>
                  <div class="mb-3">
                    <input type="text" class="form-control" id="Username" name="username"
                      placeholder="User Name">
                  </div>
                  <div class="mb-3">
                    <input type="password" class="form-control" id="password" name="password" placeholder="Password">
                  </div>
                  <div class="text-center"><button id="creatAccount" type="submit " class="btn btn-color px-5 mb-5 w-100">Create Account</button></div>
                  <div  class="form-text text-center mb-5 text-dark">Go back To login <a href="/" class="text-dark fw-bold"> 
                  Login</a>
                  </div>
                  </div>
                </form>
             <% } %>  
         
          </div>
  
        </div>
      </div>
    </div>
    <%- include('footer.ejs') %>
    <script src="/javascripts/login.js"></script>
  </body>
</html>